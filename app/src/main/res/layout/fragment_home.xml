<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/activity_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/arancione4"
        android:focusableInTouchMode="true"
        android:fitsSystemWindows="true"
        tools:context=".fragments.HomeFragment">

    <!-- Serve per il menu -->
    <FrameLayout
        android:id="@+id/container_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/intro_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:backgroundTint="@color/testi"
            app:cornerRadius="20dp"
            android:text="Prenota un posto a tavola per oggi!"
            android:clickable="false">
        </Button>


        <ScrollView
            android:id="@+id/layout_seekbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--  Barra di ricerca CittÃ  -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cityErr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp">

                    <Spinner
                        android:id="@+id/citta_menu"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/spinner_rounded_corners"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <!--  Pulsante "Cerca" e inferiori -->

               <include layout="@layout/select_ristorante" />

                <Button
                    android:id="@+id/cerca"
                    android:layout_width="340dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/arancione2"
                    android:gravity="center"
                    android:text="@string/cerca"
                    android:textSize="18sp"
                    app:cornerRadius="20dp"/>

            </LinearLayout>

        </ScrollView>


      </FrameLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>