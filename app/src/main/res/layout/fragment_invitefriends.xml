<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.InviteFriendsFragment"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/fragment_invitefriends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/arancione4"
        android:focusableInTouchMode="true"
        android:fitsSystemWindows="true"
        tools:context=".fragments.InviteFriendsFragment" >

        <TextView
            android:id="@+id/invitefriends_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/arancione4"
            android:textAlignment="center"
            android:text="@string/invitefriendstext"
            android:textSize="20sp" />

        <View
            android:id="@+id/linea"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/invitefriends_text"
            android:background="#ffffff" />


        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linea"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>