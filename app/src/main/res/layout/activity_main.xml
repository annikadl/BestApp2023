<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/activity_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/arancione4"
        android:focusableInTouchMode="true"
        android:fitsSystemWindows="true"
        tools:context=".activities.MainActivity">

        <!-- Serve per il menu -->
    <FrameLayout
        android:id="@+id/container_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/layout_seekbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--  Barra di ricerca CittÃ  -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cityErr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp">

                    <Spinner
                        android:id="@+id/citta_menu"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/arancione2"
                        android:background="@color/white"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--  Pulsante "Cerca" e inferiori -->

                <include layout="@layout/select_ristorante" />

                <Button
                    android:id="@+id/cerca"
                    android:layout_width="340dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/arancione2"
                    android:gravity="center"
                    android:text="@string/cerca"
                    android:textSize="18sp"
                    app:cornerRadius="20dp" />

                <!--<TextView
                    android:id="@+id/link_login"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/accesso"
                    android:gravity="center"
                    android:textSize="16sp"/>-->
                <!--<FrameLayout
                    android:id="@+id/container_login2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/link_login"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/arancione2"
                        android:gravity="center"
                        android:onClick="this"
                        android:text="@string/loginText"
                        android:textSize="18sp"
                        app:cornerRadius="20dp"
                        tools:ignore="OnClick" />
                </FrameLayout>-->


            </LinearLayout>

        </ScrollView>

        <!--Layout per la toolbar in fondo alla schermata, per navigare fra home, profilo e invita amici -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:background="@color/arancione2"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/arancione2"
                android:gravity="center"
                android:onClick="this"
                android:src="@drawable/iconshomesmall"
                android:textSize="18sp"
                tools:ignore="OnClick" />

            <ImageButton
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="right|center_horizontal"
                android:backgroundTint="@color/arancione2"
                android:gravity="center"
                android:onClick="this"
                android:src="@drawable/iconsprofilesmall"
                android:textSize="18sp"
                tools:ignore="OnClick" />

            <ImageButton
                android:id="@+id/invitefriends"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="left|center_horizontal"
                android:backgroundTint="@color/arancione2"
                android:gravity="center"
                android:onClick="this"
                android:src="@drawable/iconsfriendsmall"
                android:textSize="18sp"
                tools:ignore="OnClick" />
        </androidx.appcompat.widget.Toolbar>
        </RelativeLayout>

    </FrameLayout>
</RelativeLayout>
